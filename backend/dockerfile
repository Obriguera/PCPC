FROM python:3.12-slim

# Dependencias del sistema
RUN apt-get update && apt-get install -y \
    chromium-driver \
    chromium \
    curl \
    unzip \
    wget \
    gnupg \
    && rm -rf /var/lib/apt/lists/*

# Variables de entorno
ENV RUNNING_IN_DOCKER=1
ENV PATH="/usr/lib/chromium:/usr/lib/chromium-browser:${PATH}"
ENV CHROME_BIN=/usr/bin/chromium
ENV CHROMEDRIVER_PATH=/usr/bin/chromedriver

# Carpeta de trabajo
WORKDIR /code

# --- Paso 1: copiar requirements primero (para usar cache de Docker) ---
COPY requirements.txt .

# --- Paso 2: instalar dependencias Python ---
RUN pip install --no-cache-dir -r requirements.txt

# --- Paso 3: copiar todo el proyecto ---
COPY . .

# Por defecto arranca FastAPI (se sobreescribe en runner con `command`)
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]
